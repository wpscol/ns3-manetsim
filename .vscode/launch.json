{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ns-3.44 Simulator",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/ns-allinone-3.44/ns-3.44/build/scratch/ns3.44-manet-sim-debug",
      "args": [
        "--rngRun=10",
        "--environment=forest",
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}